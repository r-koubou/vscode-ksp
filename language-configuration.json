{
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\#\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
    "comments":
    {
        "blockComment": [ "{", "}" ]
    },
    "colorizedBracketPairs": [
        [ "(", ")" ],
        [ "{", "}" ],
        [ "[", "]" ]
    ],
    "brackets":
    [
        [ "[", "]" ],
        [ "(", ")" ]
    ],
    "autoClosingPairs":
	[
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"" }
    ],
    "surroundingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
    ]
}
